{
  "compilerOptions": {
    "strict": true,
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "outDir": "./build",
    "rootDir": "./",
    "lib": ["esnext"],
    "forceConsistentCasingInFileNames": true
  },
  "include": ["**/*.ts", "types/*.ts"],
  "exclude": ["node_modules"]
}
